extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Espécie: "#{exemplar.Espécie}"
    .w3-container
      h2 Nome Científico da Especie: "#{exemplar["Nome Científico"]}"
      h2 Registos da Especie: 
      table.w3-table-all
        tr
          th ID 
          th Freguesia 
          th Espécie 
          th Estado
          th Número de intervenções
        
        each planta in plantas
          tr
            td #[a(href="/"+planta._id)= planta._id] 
            td #[a(href="/especies/"+planta.Freguesia)= planta.Freguesia]
            td= planta.Espécie 
            td= planta.Estado
            td= planta["Número de intervenções"]
              
    footer.w3-container.w3-teal
      h5 Generated by Bernard A. Georges in #{d} - #[a(href="/") Return]
