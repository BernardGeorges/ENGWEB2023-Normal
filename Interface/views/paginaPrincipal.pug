extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Distribuição Arbórea em freguesias Portuguesas
    .w3-container
      table.w3-table-all
        tr
          th ID 
          th Freguesia 
          th Espécie 
          th Estado
          th Número de intervenções
        
        each planta in plantas
          tr
            td #[a(href="/"+planta._id)= planta._id] 
            td #[a(href="/especies/"+planta._id)= planta.Freguesia]
            td= planta.Espécie 
            td= planta.Estado
            td= planta["Número de intervenções"]
            
              
    footer.w3-container.w3-teal
      h5 Generated by Bernard A.Georges
