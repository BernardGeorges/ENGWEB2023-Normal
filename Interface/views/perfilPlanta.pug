extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 Planta: #{planta._id}
        br
        .w3-container.w3-padding
            h4 Número de Registo: #{planta["Número do Registo"]}
            h4 Código de rua: #{planta["Código de rua"]}
            h4 Rua: #{planta.Rua}
            h4 Local: #{planta.Local}
            h4 Freguesia: #{planta.Freguesia}
            h4 Espécie: #{planta.Espécie}
            h4 Nome Científico: #{planta["Nome Científico"]}
            h4 Origem: #{planta.Origem}
            h4 Data de Plantação: #{planta["Data de Plantação"]}
            h4 Estado: #{planta.Estado}
            h4 Caldeira: #{planta.Caldeira}
            h4 Tutor: #{planta.Tutor}
            h4 Implantação: #{planta.Implantação}
        footer.w3-container.w3-teal
            h5 Generated by Bernard A. Georges in #{d} - #[a(href="/") Return]